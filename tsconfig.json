{
  "compilerOptions": {
    "outDir": "./commonjs",
    "module": "commonjs",
    "target": "es2015",
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2015.promise",
      "es2015",
      "dom"
    ],
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "types"
  ],
  "exclude": [
    "coverage",
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}
